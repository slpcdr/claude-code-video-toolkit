    "bgLight": "#ffffff",
    "bgDark": "#1a1a2e",
    "bgOverlay": "rgba(255, 255, 255, 0.95)",
    "divider": "#e2e8f0",
    "shadow": "rgba(0, 0, 0, 0.12)"
